rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2021, 5, 1);
    }
  }
  match /users/{user} {
    allow create: if (!request.resource.data.isAdmin && request.resource.data.isSnapper);
  }
  match /snaps/{snap} {
    allow create: if request.auth != null;
    allow read, delete: if request.auth != null && request.auth.uid == snap.from;
  }
}